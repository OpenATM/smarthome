<%= form_for([@post, @post.comments.build]) do |f|%>
   <div class="filed">
   	 <%= f.label :commenter %></br>
   	 <%= f.text_field :commenter %></br>
   </div>
   <div class="filed">
   	 <%= f.label :body %></br>
   	 <%= f.text_area :body %></br>
   </div>
   <div class="actions">
   	 <%= f.submit %></br>
   </div>
<%end%>